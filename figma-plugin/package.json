{
  "name": "prompt-to-design-figma-plugin",
  "version": "1.0.0",
  "description": "Figma plugin for AI-powered design generation",
  "scripts": {
    "build": "npm run build:code && npm run copy-ui",
    "build:code": "esbuild src/code.ts --bundle --outfile=dist/code.js --format=iife --target=es6",
    "copy-ui": "cp src/ui.html dist/ui.html",
    "watch": "esbuild src/code.ts --bundle --outfile=dist/code.js --format=iife --target=es6 --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.98.0",
    "concurrently": "^8.2.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.5.0"
  }
}
